<?xml version='1.0' encoding='utf-8'?>

<scene>
	<integrator type="vol_path_mis"/>


	<camera type="perspective">
		<float name="fov" value="45.8402"/>
		<transform name="toWorld">
			<scale value="1 1 1"/>
			<lookat target="-0.166029, 0.148984, -0.537402" origin="-0.61423, 0.154197, -1.43132" up="-0.000640925, -0.999985, -0.0055102"/>
		</transform>

		<integer name="height" value="576"/>
		<integer name="width" value="768"/>
	</camera>

	<sampler type="independent">
		<integer name="sampleCount" value="8192"/>
	</sampler>

	<mesh type="obj">
		<string name="filename" value="meshes/bounds.obj"/>
		<bsdf type="nullBSDF"/>
		<medium type="heterogeneous">
			<phase type="isotropic"/>
			<volume name="sigma_t" type="grid">
				<string name="filename" value="smoke2.vol"/>
			</volume>

			<volume name="albedo" type="constFVol">
				<float name="value" value="0.2"/>
			</volume>

			<float name="scale" value="20"/>
		</medium>
	</mesh>

	<mesh type="obj">
		<!-- Shiny floor -->
		<string name="filename" value="meshes/plane.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value="0.2, 0.2, 0.3"/>
		</bsdf>
		<transform name="toWorld">
			<translate value="0 0.48 0"/>
		</transform>
	</mesh>

	<mesh type="sphere">
		<point name="center" value="0 -2 -1"/>
		<float name="radius" value="0.2"/>

		<emitter type="area">
			<color name="radiance" value="400 400 400"/>
		</emitter>
	</mesh>
</scene>
